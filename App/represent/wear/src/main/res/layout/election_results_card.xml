<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/represent_red"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:elevation="7dp"
            android:background="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/election_results_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:textColor="@color/represent_red" />

            <TextView
                android:id="@+id/election_results_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/represent_dark_red"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/election_results_republican_candidate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/election_results_republican_vote"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_medium_gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/election_results_democrat_candidate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="14sp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/election_results_democrat_vote"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_medium_gray"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
