<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/card_padding"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="@dimen/common_elevation"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/common_element_large_spacing"
        android:layout_margin="@dimen/common_element_spacing"
        android:background="@color/white">

        <TextView
            android:id="@+id/election_results_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_element_spacing"
            android:textSize="@dimen/title_text_size"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/represent_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_element_spacing"
            android:textColor="@color/represent_dark_red"
            android:textSize="@dimen/small_body_text_size"
            android:text="@string/election_results_card_title_text" />

        <TextView
            android:id="@+id/election_results_republican_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_element_spacing"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/small_body_text_size" />

        <TextView
            android:id="@+id/election_results_democrat_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_element_spacing"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/small_body_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_body_text_size"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/represent_red"
            android:text="@string/election_results_card_action_text" />

    </LinearLayout>

</RelativeLayout>
