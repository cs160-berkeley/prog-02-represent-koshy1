<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@android:color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_card_image"
                android:layout_width="wrap_content"
                android:layout_height="167dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:scaleType="fitStart" />

            <TextView
                android:id="@+id/profile_card_name"
                android:layout_below="@+id/profile_card_image"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/represent_red" />

            <TextView
                android:id="@+id/profile_card_position"
                android:layout_below="@+id/profile_card_name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:textColor="@color/text_dark_gray"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/profile_card_position_label"
                android:layout_below="@+id/profile_card_position"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/text_dark_gray"
                android:text="@string/position_label_text" />

            <TextView
                android:id="@+id/profile_card_party"
                android:layout_below="@+id/profile_card_position_label"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_dark_gray" />

            <TextView
                android:id="@+id/profile_card_party_label"
                android:layout_below="@+id/profile_card_party"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/text_dark_gray"
                android:text="@string/party_label_text"/>

            <TextView
                android:id="@+id/profile_card_end_date"
                android:layout_below="@+id/profile_card_party_label"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_dark_gray" />

            <TextView
                android:id="@+id/profile_card_end_date_label"
                android:layout_below="@+id/profile_card_end_date"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/text_dark_gray"
                android:text="@string/end_date_label_text"/>

            <View
                android:id="@+id/profile_card_border"
                android:layout_below="@+id/profile_card_end_date_label"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_height="1dp"
                android:background="@color/text_light_gray" />

            <TextView
                android:id="@+id/profile_card_email"
                android:layout_below="@+id/profile_card_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/represent_red"
                android:text="@string/email_label_text"/>

            <TextView
                android:id="@+id/profile_card_website"
                android:layout_toRightOf="@+id/profile_card_email"
                android:layout_below="@+id/profile_card_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/represent_red"
                android:text="@string/website_label_text"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
