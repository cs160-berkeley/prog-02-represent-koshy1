<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/list_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_element_spacing"
        android:elevation="@dimen/common_elevation"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/list_item_representative_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/common_element_spacing"
            android:layout_marginLeft="@dimen/common_element_spacing"/>

        <TextView
            android:id="@+id/list_item_representative_name"
            android:layout_toRightOf="@id/list_item_representative_image"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/common_element_spacing"
            android:layout_marginLeft="@dimen/common_element_spacing"
            android:layout_marginRight="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_title_text_size"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/represent_red"/>

        <TextView
            android:id="@+id/list_item_representative_position"
            android:layout_below="@+id/list_item_representative_name"
            android:layout_toRightOf="@id/list_item_representative_image"
            android:layout_marginTop="@dimen/common_element_spacing"
            android:layout_marginLeft="@dimen/common_element_spacing"
            android:layout_marginRight="56dp"
            android:textSize="@dimen/large_body_text_size"
            android:textColor="@color/text_dark_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/list_item_representative_position_label"
            android:layout_below="@id/list_item_representative_position"
            android:layout_toRightOf="@id/list_item_representative_image"
            android:layout_marginTop="@dimen/label_spacing"
            android:layout_marginLeft="@dimen/common_element_spacing"
            android:layout_marginRight="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_body_text_size"
            android:textColor="@color/text_medium_gray"
            android:text="@string/position_label_text"/>

        <TextView
            android:id="@+id/list_item_representative_party"
            android:layout_below="@id/list_item_representative_position_label"
            android:layout_toRightOf="@id/list_item_representative_image"
            android:layout_marginTop="@dimen/common_element_spacing"
            android:layout_marginLeft="@dimen/common_element_spacing"
            android:layout_marginRight="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_dark_gray"
            android:textSize="@dimen/large_body_text_size" />

        <TextView
            android:id="@+id/list_item_representative_party_label"
            android:layout_below="@id/list_item_representative_party"
            android:layout_toRightOf="@id/list_item_representative_image"
            android:layout_marginBottom="@dimen/common_element_spacing"
            android:layout_marginTop="@dimen/label_spacing"
            android:layout_marginLeft="@dimen/common_element_spacing"
            android:layout_marginRight="56dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_body_text_size"
            android:textColor="@color/text_medium_gray"
            android:text="@string/party_label_text"/>

        <ImageView
            android:id="@+id/list_item_website"
            android:layout_alignParentRight="true"
            android:layout_below="@id/list_item_representative_party_label"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="@dimen/common_element_spacing"
            android:layout_marginRight="20dp"
            android:src="@drawable/web"/>

        <ImageView
            android:id="@+id/list_item_email"
            android:layout_below="@id/list_item_representative_party_label"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:layout_marginBottom="@dimen/common_element_spacing"
            android:layout_toLeftOf="@+id/list_item_website"
            android:src="@drawable/email"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="9dp"
            android:layout_height="12dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/more_info" />

    </RelativeLayout>

</RelativeLayout>
